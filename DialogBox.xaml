<Window x:Class="mangadex_sharp_scraper.DialogBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mangadex_sharp_scraper"
        mc:Ignorable="d"
        Title="Info" Height="150" Width="400"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="33*"></RowDefinition>
            <RowDefinition Height="60*"></RowDefinition>
            <RowDefinition Height="28*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Text="Enter Text" HorizontalAlignment="Center" FontSize="20" Name="DialogTitle" FontWeight="Bold" Grid.Row="0"></TextBlock>
        <TextBlock Text="Text" HorizontalAlignment="Center" FontSize="15" Name="DialogText" Grid.Row="1" Width="300" TextAlignment="Center" Margin="47,0,47,6"/>
        <Button Height="25" Width="50" Grid.Row="2" HorizontalAlignment="Center"  Click="ButtonBase_OnClick" Content="OK" FontSize="11"></Button>
    </Grid>
</Window>
